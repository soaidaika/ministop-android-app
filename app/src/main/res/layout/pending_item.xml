<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/pending_item_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@color/green700"
                    android:scaleType="centerCrop"
                    app:strokeWidth="5dp"
                    app:strokeColor="#777777"/>

                <RelativeLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/pendng_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:maxLines="1"
                        android:text="ProductName"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RatingBar
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pendng_item_name"
                        android:layout_marginLeft="5dp"
                        android:rating="5" />

                    <TextView
                        android:id="@+id/pending_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: 100000 VND"
                        android:layout_below="@id/pendng_item_name"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>



            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>